{
  "name": "math-toolbox",
  "description": "Lightweight and modular math toolbox",
  "type": "module",
  "types": "dist/math-toolbox.d.ts",
  "main": "dist/math-toolbox.umd.cjs",
  "module": "dist/math-toolbox.js",
  "version": "0.0.0-semantically-released",
  "exports": {
    ".": {
      "types": "./dist/math-toolbox.d.ts",
      "require": "./dist/math-toolbox.cjs",
      "import": "./dist/math-toolbox.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist/*",
    "build": "npm run clean && rollup -c",
    "docs": "documentation build src/math-toolbox.js -f html -o docs",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "npm run lint && vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepublish": "npm run build",
    "coveralls": "npm run test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/terkelg/math-toolbox"
  },
  "bugs": {
    "url": "https://github.com/terkelg/math-toolbox/issues"
  },
  "files": [
    "dist",
    "src",
    "types"
  ],
  "keywords": [
    "math",
    "utils",
    "toolbox",
    "tools",
    "helper",
    "lerp",
    "map",
    "clamp",
    "average",
    "isOdd",
    "isEven",
    "smoothstep",
    "random",
    "distance",
    "trigonometry",
    "geometry",
    "mix",
    "gcd"
  ],
  "author": "Terkel Gjervig",
  "maintainers": [
    {
      "name": "Patrick Heng",
      "url": "https://github.com/patrickheng"
    },
    {
      "name": "Fabien Motte",
      "url": "https://github.com/FabienMotte"
    },
    {
      "name": "Terkel Gjervig",
      "email": "terkel@terkel.com",
      "url": "https://terkel.com"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-istanbul": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "coveralls": "^3.1.1",
    "documentation": "^14.0.2",
    "esbuild": "^0.19.5",
    "jsdoc-to-markdown": "^8.0.0",
    "rollup": "^4.3.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "semantic-release": "^22.0.7",
    "standard": "^17.1.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "standard": {
    "ignore": [
      "/docs",
      "/dist"
    ],
    "globals": [
      "expect",
      "it",
      "test",
      "describe"
    ]
  }
}
